      .projectsItem
        a.projectsItem-link(href='/jameson.html') Jameson Irish Hood
        .projectsItem-bg(style={'background-image': 'url(assets/images/jameson-page.jpg)'})
      .projectsItem
        a.projectsItem-link(href='/jagermeister.html') Jagermeister Indie Awards
        .projectsItem-bg(style={'background-image': 'url(assets/images/OUT_5403.jpg)'})
      .projectsItem
        a.projectsItem-link(href='/tuborg.html') Tuborg Green Jam
        .projectsItem-bg(style={'background-image': 'url(assets/images/160813183942.jpg)'})
      .projectsItem
        a.projectsItem-link(href='/olmeca.html') Olmeca Rise&Shine Tour
        .projectsItem-bg(style={'background-image': 'url(assets/images/_VCH1014.jpg)'})
      .projectsItem
        a.projectsItem-link(href='/samsung.html') Samsung Galaxy S8|S8+
        .projectsItem-bg(style={'background-image': 'url(assets/images/kv_galaxys8_unbox_phone_l.jpg)'})
      .projectsItem
        a.projectsItem-link(href='/tbrg.html') TBRG<br> OPEN<br> FEST
        .projectsItem-bg(style={'background-image': 'url(assets/images/3I9A4265.jpg)'})
      .projectsItem
        a.projectsItem-link(href='/ams.html') AMS1 launch party
        .projectsItem-bg(style={'background-image': 'url(assets/images/S_event_204_1.jpg)'})
