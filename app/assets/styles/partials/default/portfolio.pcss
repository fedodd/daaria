.portfolio {
  background-color: $color-background;
}

.portfolio-banner {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 680px;
  background-color: black;
  background-position: center;
  background-size: cover;
}

.portfolio-title {
  font: $font-mainTitle;
  line-height: -webkit-fill-available;
  text-align: center;
  text-transform: uppercase;
  color: white;
}

.portfolio-content {

  @mixin respond-to medium {
    width: 400px;
  }
}
