.pageVideo-block {
  position: relative;
  margin: $padding-block auto;
  width: 90%;

  @mixin respond-to medium {
    width: 80%;
  }

  &::before {
    display: block;
    padding-top: 56%;
    content: '';
  }
}

.pageVideo {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 100%;
}
