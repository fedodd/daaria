.pageVideo-block {
  position: relative;
  margin: $padding-block auto;

  @mixin respond-to medium {
    width: 80%;
  }

  &.is__special {
    margin: 0;
    margin-bottom: 20px;
    width: 100%;

    @mixin respond-to medium {
      margin-bottom: 0;
      width: 45%;
    }
  }

  &::before {
    display: block;
    padding-top: 56%;
    content: '';
  }
}

.pageVideo {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  display: block;
  width: 100%;
  height: 100%;
}
