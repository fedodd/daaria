/* Magnific Popup CSS */
.mfp-bg {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1042;
  overflow: hidden;
  width: 100%;
  height: 100%;
  opacity: 0.8;
  background: white; }

.mfp-wrap {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1043;
  width: 100%;
  height: 100%;
  outline: none !important;
  -webkit-backface-visibility: hidden; }

.mfp-container {
  position: absolute;
  top: 0;
  left: 0;
  padding: 0 20px;
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  text-align: center; }

.mfp-container:before {
  display: inline-block;
  height: 100%;
  vertical-align: middle;
  content: ''; }

.mfp-align-top .mfp-container:before {
  display: none; }

.mfp-content {
  position: relative;
  z-index: 1045;
  display: inline-block;
  margin: 0 auto;
  text-align: left;
  vertical-align: middle; }

.mfp-inline-holder .mfp-content,
.mfp-ajax-holder .mfp-content {
  cursor: auto;
  width: 100%; }

.mfp-ajax-cur {
  cursor: progress; }

.mfp-zoom-out-cur, .mfp-zoom-out-cur .mfp-image-holder {
  cursor: -moz-zoom-out;
  cursor: -webkit-zoom-out;
  cursor: zoom-out; }

.mfp-zoom {
  cursor: pointer;
  cursor: -webkit-zoom-in;
  cursor: -moz-zoom-in;
  cursor: zoom-in; }

.mfp-auto-cursor .mfp-content {
  cursor: auto; }

.mfp-close,
.mfp-arrow,
.mfp-preloader,
.mfp-counter {
  -webkit-user-select: none;
  -moz-user-select: none;
  user-select: none; }

.mfp-loading.mfp-figure {
  display: none; }

.mfp-hide {
  display: none !important; }

.mfp-preloader {
  position: absolute;
  top: 50%;
  right: 8px;
  left: 8px;
  z-index: 1044;
  margin-top: -0.8em;
  width: auto;
  text-align: center;
  color: #CCC; }
  .mfp-preloader a {
    color: #CCC; }
    .mfp-preloader a:hover {
      color: #FFF; }

.mfp-s-ready .mfp-preloader {
  display: none; }

.mfp-s-error .mfp-content {
  display: none; }

button.mfp-close,
button.mfp-arrow {
  z-index: 1046;
  display: block;
  overflow: visible;
  cursor: pointer;
  padding: 0;
  border: 0;
  outline: none;
  background: transparent;
  box-shadow: none;
  touch-action: manipulation;
  -webkit-appearance: none; }

button::-moz-focus-inner {
  padding: 0;
  border: 0; }

.mfp-close {
  position: fixed;
  top: 35px;
  right: 20px;
  display: block;
  width: 40px;
  height: 40px;
  font-size: 0;
  opacity: 0.65;

  &::after,
  &::before {
    position: absolute;
    display: block;
    width: 40px;
    height: 2px;
    background: black;
    content: '';
  }

  &::before {
    transform: rotate(-45deg);
  }

  &::after {
    transform: rotate(45deg);
  }
}
  .mfp-close:hover,
  .mfp-close:focus {
    opacity: 1; }
  .mfp-close:active {
    top: 36px; }

.mfp-close-btn-in .mfp-close {
  color: #333; }

.mfp-image-holder .mfp-close,
.mfp-iframe-holder .mfp-close {
  color: white; }

.mfp-counter {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 12px;
  line-height: 18px;
  white-space: nowrap;
  color: #CCC; }

.mfp-container .mfp-arrow {
  position: absolute;
  top: 47%;
  width: 60px;
  height: 60px;
  border-radius: 50%;
  opacity: 0.65;
  transform: rotate(45deg);
  transform: translateY(100%);

  &::after {
    position: absolute;
    top: 12px;
    left: 18px;
    display: block;
    width: 30px;
    height: 30px;
    border-bottom: 2px solid black;
    border-left: 2px solid black;
    content: '';
  }

  &.mfp-arrow-left,
  &.mfp-arrow-right {
    &:active {
      margin-top: 2px;
    }
  }

  &.mfp-arrow-left {
    left: 10px;
    transform: rotate(45deg);
  }

  &.mfp-arrow-right {
    right: 10px;
    transform: rotate(-135deg);
  }
}

  .mfp-arrow:active {
     }
  .mfp-arrow:hover,
  .mfp-arrow:focus {
    opacity: 1; }

.mfp-iframe-holder {
  padding-top: 40px;
  padding-bottom: 40px; }
  .mfp-iframe-holder .mfp-content {
    width: 100%;
    max-width: 900px;
    line-height: 0; }
  .mfp-iframe-holder .mfp-close {
    top: -40px; }

.mfp-iframe-scaler {
  overflow: hidden;
  padding-top: 56.25%;
  width: 100%;
  height: 0; }
  .mfp-iframe-scaler iframe {
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
    background: #000;
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.6); }

/* Main image in popup */
img.mfp-img {
  display: block;
  margin: 0 auto;
  padding: 40px 0 40px;
  box-sizing: border-box;
  width: auto;
  max-width: 100%;
  height: auto;
  line-height: 0; }

/* The shadow behind the image */
.mfp-figure {
  line-height: 0; }
  .mfp-figure:after {
    position: absolute;
    top: 40px;
    right: 0;
    bottom: 40px;
    left: 0;
    z-index: -1;
    display: block;
    width: auto;
    height: auto;
    background: white;
    box-shadow: 0 0 8px rgba(0, 0, 0, 0.6);
    content: ''; }
  .mfp-figure small {
    display: block;
    font-size: 12px;
    line-height: 14px;
    color: #BDBDBD; }
  .mfp-figure figure {
    margin: 0; }

.mfp-bottom-bar {
  position: absolute;
  top: 100%;
  left: 0;
  cursor: auto;
  margin-top: -36px;
  width: 100%; }

.mfp-title {
  display: none;
  padding-right: 36px;
  line-height: 18px;
  text-align: left;
  word-wrap: break-word;
  color: #F3F3F3; }

.mfp-image-holder .mfp-content {
  max-width: 100%; }

.mfp-gallery .mfp-image-holder .mfp-figure {
  cursor: pointer; }

@media screen and (max-width: 830px) and (orientation: landscape), screen and (max-height: 300px) {
  /**
       * Remove all paddings around the image on small screen
       */
  .mfp-img-mobile .mfp-image-holder {
    padding-right: 0;
    padding-left: 0; }
  .mfp-img-mobile img.mfp-img {
    padding-bottom: 0; }
  .mfp-img-mobile .mfp-figure:after {
    top: 0;
    bottom: 0; }
  .mfp-img-mobile .mfp-figure small {
    display: inline;
    margin-left: 5px; }
  .mfp-img-mobile .mfp-bottom-bar {
    position: fixed;
    top: auto;
    bottom: 0;
    margin: 0;
    padding: 3px 5px;
    box-sizing: border-box;
    background: rgba(255, 255, 255, 0.6); }
    .mfp-img-mobile .mfp-bottom-bar:empty {
      padding: 0; }
  .mfp-content .mfp-img-mobile .mfp-counter {
    top: 3px;
    right: 5px; }
}

@media all and (max-width: 920px) {
  .mfp-content .mfp-figure .mfp-close {
    position: absolute;
    top: 0px;
    right: 5px;
  }

  .mfp-figure .mfp-close:active {
    top: 2px; }


  .mfp-container .mfp-arrow {
    background-color: rgba(255, 255, 255, .5);
    &.mfp-arrow-left {
      left: 0;
    }

    &.mfp-arrow-right {
      right: 0;
    }
  }
}

@media all and (max-width: 900px) {
  .mfp-container {
    padding-right: 6px;
    padding-left: 6px; }
  }
